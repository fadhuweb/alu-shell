#!/usr/bin/env bash
# Check if the file exists
if [ -e "/etc/passwd" ]; then
    # Read the file line by line using while loop and IFS
    while IFS=: read -r username _ uid gid gecos home shell; do
        # Extract additional user information
        IFS=, read -ra userinfo <<< "$gecos"
        fullname="${userinfo[0]}"
        passcode="${userinfo[1]}"
        userinfourl="${userinfo[2]}"

        # Display the fictional story
        echo "The user $username is part of the $gid gang,"
        echo "lives in $home and rides $shell."
        echo "User ID's place is protected by the passcode $passcode,"
        echo "more info about the user here: $userinfourl"
        echo
    done < "/etc/passwd"
else
    echo "Error: /etc/passwd file not found."
  

~
~
~
~
~
